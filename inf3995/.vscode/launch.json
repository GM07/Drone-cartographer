{
    "version": "0.2.0",
    "configurations": 
    [{   "name": "(gdb) Attach",
         "type": "cppdbg", 
         "request": "attach", 
         "program" :  "/usr/local/bin/argos3", 
         "processId": "${command:pickProcess}",
         "MIMode": "gdb", 
         "setupCommands": 
             [ { "description": "Enable pretty-printing for gdb", 
                 "text": "-enable-pretty-printing","ignoreFailures": true
                 } ]
     }]
 }