{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Lint Backend Server",
            "type": "shell",
            "command": "find . -type f -name '*.py' | xargs pylint  --rcfile pylintrc"
        },
        {
            "label": "Run tests",
            "type": "shell",
            "command": "coverage run -m pytest"
        },
        {
            "label": "Get coverage",
            "type": "shell",
            "command": "coverage report -m"
        },
        {
            "label": "Run autoformater",
            "type": "shell",
            "command": "yapf --style google -rpi ."
        }
    ]
}