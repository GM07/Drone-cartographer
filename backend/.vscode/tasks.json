{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Lint Backend Server",
            "type": "shell",
            "command": "find . -type f -name '*.py' | xargs pylint  --rcfile pylintrc"
        },
        {
            "label": "Run tests",
            "type": "shell",
            "command": "pytest"
        },
        {
            "label": "Start backend",
            "type": "shell",
            "command": "python3 server.py"
        },
        {
            "label": "Run autoformater",
            "type":"shell",
            "command":"yapf --style google -rpi ."
        }

    ]

}
