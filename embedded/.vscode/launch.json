{
    "version": "0.2.0",
    "configurations": 
    [
      {
        "name": "Argos",
        "type": "cppdbg",
        "request": "launch",
        "program": "/usr/local/bin/argos3",
        "args": [
          "-c", "experiments/${input:argos_experiment}",
        ],
        "cwd": "${workspaceFolder}/simulation",
        "MIMode": "gdb",
        "setupCommands": 
        [ 
          {
            "description": "Enable pretty-printing for gdb", 
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          } 
        ]
      },
      {
        "name": "Stub Server",
        "request": "launch",
        "type": "python",
        "program": "ServerStub.py",
        "console": "integratedTerminal"
      },
