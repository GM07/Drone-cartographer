{
    "version": "0.2.0",
    "configurations": 
    [
      {
        "name": "Argos",
        "type": "cppdbg",
        "request": "launch",
        "program": "/usr/local/bin/argos3",
        "args": [
          "-c", "experiments/${input:argos_experiment}",
        ],
        "cwd": "${workspaceFolder}/simulation",
        "MIMode": "gdb",
        "preLaunchTask": "Compile Simulation Firmware",
        "setupCommands": 
        [
          {
            "description": "Enable pretty-printing for gdb", 
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
      ]
      },
      {
        "name": "Stub Server",
        "request": "launch",
        "type": "python",
        "program": "ServerStub.py",
        "console": "integratedTerminal"
      },
      {
        "name": "Embedded",
        "cwd": "${workspaceFolder}",
        "executable": "${workspaceFolder}/embedded-firmware/cf2.elf",
        "request": "launch",
        "type": "cortex-debug",
        "device": "STM32F405",
        "svdFile": "${workspaceFolder}/embedded-firmware/STM32F405.svd",
        "servertype": "openocd",
        "configFiles": ["interface/stlink-v2-1.cfg", "target/stm32f4x.cfg"],
        "runToEntryPoint": "main",
        "gdbPath": "/usr/bin/gdb-multiarch",
        "preLaunchCommands": [
          "set mem inaccessible-by-default off",
          "enable breakpoint",
          "monitor reset"
        ],
      }
    ],
    "compounds": [
      {
        "name": "Debug Simulation",
        "configurations": ["Argos", "Stub Server"],
        "stopAll": true,
        "presentation": {
          "hidden": false,
          "group": "",
          "order": 1
        }
      },
      {
        "name": "Debug Embedded",
        "configurations": ["Embedded", "Stub Server"],
        "stopAll": true,
        "presentation": {
          "hidden": false,
          "group": "",
          "order": 1
        }
      }
    ],
    "inputs": [
      {
        "id": "argos_experiment",
        "type": "promptString",
        "default": "crazyflie_sensing.argos",
        "description": "Default experiment"
      }
    ]
 }