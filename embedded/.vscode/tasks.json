{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Compile Argos Examples",
			"type": "shell",
			"detail": "Clone and compile argos examples in workspace folder ",
			"options": {
				"cwd": "${workspaceFolder}/argos3-examples"
			},
			"command": [
				"if test -d build; then rm -rf build; fi &&",
				"mkdir build && cd build && cmake -GNinja -DCMAKE_BUILD_TYPE=Debug .. && ninja"
			]
		},
		{
			"label": "Compile Simulation Code",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/simulation"
			},
			"command": [
				"if test -d build; then rm -rf build; fi &&",
				"mkdir build && cd build && cmake -GNinja -DCMAKE_BUILD_TYPE=Debug .. && ninja"
			]
		},
		{
			"label": "Build Argos3",
			"type": "shell",
			"detail": "Builds argos3 repo from source",
			"options": {
				"cwd": "${workspaceFolder}/argos3"
			},
			"command": [
				"if test -d build_simulator; then rm -r build_simulator; fi &&",
				"mkdir build_simulator && cd build_simulator && cmake -GNinja ../src -DCMAKE_BUILD_TYPE=Debug -DARGOS_BUILD_FOR=simulator -DARGOS_THREADSAFE_LOG=ON -DARGOS_DYNAMIC_LOADING=ON && ninja"
			]
		},
		{
			"label": "Install Argos3",
			"type": "shell",
			"detail": "Install argos3 from built source",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"command": "touch ${workspaceFolder}/argos3/build_simulator/argos3.1.gz && touch ${workspaceFolder}/argos3/build_simulator/README.html && cd ${workspaceFolder}/argos3/build_simulator && ninja install"
		},
		{
			"label": "Post install Argos3 script",
			"type": "shell",
			"detail": "Run argos3 post install script repo from source",
			"options": {
				"cwd": "${workspaceFolder}/argos3"
			},
			"command": "chmod +x build_simulator/argos_post_install.sh && ./build_simulator/argos_post_install.sh && echo '\nsource ${workspaceFolder}/argos3/build_simulator/setup_env.sh\n' >> /.bashrc"
		},
		{
			"label": "Install Argos3 Package",
			"type": "shell",
			"detail": "Install argos3 from .deb package",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"command": "dpkg -i argos3*.deb"
		},
		{
			"label": "Setup Argos3 from sources",
			"dependsOn": [
				"Build Argos3",
				"Install Argos3",
				"Post install Argos3 script"
			],
			"dependsOrder": "sequence",
		},
		{
			"label": "Setup Simulation",
			"dependsOn": [
				"Install Argos3 Package",
				"Compile Argos Examples"
			],
			"dependsOrder": "sequence"
		},
		{
			"label": "Flash embedded firmware",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/embedded-firmware"
			},
			"command": "make clean && make -j`nproc` && make cload"
		},
	]
}